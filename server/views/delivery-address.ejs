
<!DOCTYPE html>
</html>


<%- include('layouts/header'); -%>

<body class="page">

    <%- include('layouts/navbar'); -%>

    <!----------- Test-knap ----------->
    <button  id="testDeliveryAddress" class="btn btn-sm btn-dark" onclick="deliveryAddress()"> TEST </button>


    <div class="page-header">
        <h2> Addresseoplysninger for levering </h2>
    </div>



    <%#- include('layouts/delete-cart'); -%>
    <% if(order.status === 'cart'){ %>
        <button  id="deleteCart" class="btn btn-sm btn-danger" value="<%= order.orderID%>" > Slet kurv </button>
    <% } %>

    <!------------------------------ delivery-address form---------------------------------------------->
    <div class="row">

        <div class="col-md-4 col-md-offset-4">
            <%- include('layouts/messages'); -%>

            <form id="delAddressForm"  action="/checkout/delivery-address" method="POST"><!---id="delAddressForm"  action="/order/delivery-address" method="post"-->
                <div >
                    <label for="streetName"><b> Vejnavn: </b></label>
                    <input type="text" id="val_streetname" name="streetname" placeholder="Indsæt vejnavn"/>
                    <p id="err_streetname"  style="color: red; margin-top: 1px; margin-bottom: 1px;"></p>

                    <label for="streetNumber"><b> Husnummer: </b></label>
                    <input type="text" id="val_streetnumber" name="streetnumber" placeholder="Indsæt husnummer"/>
                    <p id="err_streetnumber"  style="color: red; margin-top: 1px; margin-bottom: 1px;"></p>

                    <label for="zipCode"><b> Post-nr: </b></label>
                    <input type="number" id="val_zipcode" name="zipcode" placeholder="Indsæt postnr."/>
                    <p id="err_zipcode" style="color: red; margin-top: 1px; margin-bottom: 1px;"></p>

                    <label for="city"><b> By: </b></label>
                    <input type="text" id="val_city" name="city" placeholder="Indsæt by" />
                    <p id="err_city" style="color: red; margin-top: 1px; margin-bottom: 1px;"></p>
                </div>
                <br/>
                <button type="submit" id="submit-address-information"> Gem  </button>
            </form>

        <p id="address-registered" style="color: red; margin-top: 1px; margin-bottom: 1px;"></p>
        </div>
    </div>


    <br/>
    <!---------------------------------------------------------------------------------------------------->




    <!-- Scripts -->

    <%- include('layouts/scripts'); -%>
    <script type="text/javascript" src="/js/address.js"></script>
    <script type="text/javascript" src="/js/deleteCart.js"></script>

</body>
</html>
